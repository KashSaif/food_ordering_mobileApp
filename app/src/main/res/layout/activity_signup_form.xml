<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc0cb"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up Information"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="14dp"
        android:background="#eeeeee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:id = "@+id/LevelFirstName"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="First Name"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edFirstName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="First name"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelLastName"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Last name"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edLastName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Last name"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelAddress"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Address"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="House, street, area and city"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelMobileNumber"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Mobile Number"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edMobileNumber"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelEmail"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Email Address"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edEmail"
                android:inputType="textEmailAddress"
                android:layout_width="0dp"
                android:hint="example@example.com"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelAddressType"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Address"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RadioButton
                    android:id = "@+id/rbHome"
                    android:text="Home"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id = "@+id/rbOffice"
                    android:text="Office"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id = "@+id/rbOther"
                    android:text="Other"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/LevelPhone"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text ="Password"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id = "@+id/edPhone"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <TextView
            android:id="@+id/tvErrorMeg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:textColor="#ff0000"
            android:gravity="center"
            android:text="Error Message will appear here"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"/>


        <TextView
            android:id="@+id/btnSave"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"/>

    </LinearLayout>







</LinearLayout>

